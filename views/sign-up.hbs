<div class="container-fluid formHolder">

  <div class="container-fluid userLoginContainer">
    <div class="">
      <form class="loginForm" action="/signup" method="post">
        <h4>Sign up</h4>
        <hr>
        <fieldset>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="email" type="text" class="form-control" name="email" placeholder="Email">
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="password" type="password" class="form-control" name="password" placeholder="Password" autocomplete="off">
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="password2" type="password" class="form-control" name="password2" placeholder="Password Again" autocomplete="off">
          </div>
        </fieldset>
        <hr>
        <div class="row">
          <div class="col-xs-9">
            <p>Already have an account? <a href="/signin">Sign in.</a></p>
          </div>
          <div class="col-xs-3">
            <button type="submit" class="btn btn-primary" name="button">OK.</button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
